<template name="deleteSinglePropertyValue" xmlns="http://ws.apache.org/ns/synapse">
    <parameter name="entityType" description="The type of the entity to delete it."/>
    <parameter name="singlePropertyName" description="To delete a single property value for an entity."/>
    <parameter name="primaryKeyValue" description="The primary key value of entity type to delete data."/>
    <sequence>
        <property name="uri.var.entityType" expression="$func:entityType"/>
        <property name="uri.var.singlePropertyName" expression="$func:singlePropertyName"/>
        <property name="uri.var.primaryKeyValue" expression="$func:primaryKeyValue"/>
        <property name="messageType" value="application/json" scope="axis2"/>
        <property name="DISABLE_CHUNKING" value="true" scope="axis2"/>
        <call>
            <endpoint>
                <http method="DELETE"
                      uri-template="{uri.var.msdynamics365.apiUrl}/api/data/{uri.var.msdynamics365.apiVersion}/{uri.var.entityType}({+uri.var.primaryKeyValue})/{+uri.var.singlePropertyName}"/>
            </endpoint>
        </call>
    </sequence>
</template>